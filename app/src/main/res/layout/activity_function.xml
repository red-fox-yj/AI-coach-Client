<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/function01"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/btn_change"
        android:text="动作评估"
        android:textSize="25dp"
        android:onClick="function01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/function02"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_change"
        android:text="姿态纠正"
        android:textSize="25dp"
        android:onClick="function02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/function03"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/btn_change"
        android:text="用户数据"
        android:textSize="25dp"
        android:onClick="function03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/function04"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/btn_change"
        android:text="使用说明"
        android:textSize="25dp"
        android:onClick="function04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>